<!DOCTYPE html>
<html>
	<head>
		<title>Sign Up</title>
	</heah>
	<body>
		<p>
			<h1>Sign Up</h1>
		</p>

		<div>
			<%= form_for(@user) do |f| %>
				<%= render 'common/error_messages', object: f.object %>
				<%= f.label :name %>
				<%= f.text_field :name %>

				<%= f.label :email %>
				<%= f.text_field :email %>

				<%= f.label :password %>
				<%= f.password_field :password %>

				<%= f.label :password_confirmation, "Confirmation" %>
				<%= f.password_field :password_confirmation %>

				<%= f.submit "Sign Up" %>
			<% end %>				
		</div>
	</body>
</html>
