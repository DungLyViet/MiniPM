<% if current_user != nil %>
	<%= render 'common/error_page' %>
<% else %>
	<% provide(:title, "Sign in") %>
	<div>
		<p>
			<h1>Sign in</h1>
		</p>
	<div>

	</ br>

	<div>
		<ul>
			<% flash.each do |key, value| %>
				<li><%= value %></li>
			<% end %>
		</ul>
	</div>

	<div>
		<%= form_for(:session, url: sessions_path) do |f| %>
			<p>
				<%= f.label :email %>
				<%= f.text_field :email %>
			</p>

			<p>
				<%= f.label :password %>
				<%= f.password_field :password %>
			</p>

			<p>
				<%= f.submit "Sign in" %>
			</p>
		<% end %>
	</div>

	<div>
		<p>
			<%= link_to "Home", root_path %>
		</p>
		<p>
			<%= link_to "Sign up", signup_path %>
		</p>
	</div>
<% end %>
