<% user = User.find_by_id(cookies[:user_id]) %>
<% if user == nil %>
<%= render 'common/error_page' %>
<% else %>
	<% provide(:title, "Profile") %>
	<div>
		<p>
			<h1>Profile</h1>
		</p>
	</div>

	<div>
		<p>
			<ul>
				<li>User name: <%= user.name %></li>
				<li>User name: <%= user.email %></li>
			</ul>
		</p>
	</div>

	<div>
		<p>
			<%= link_to "Home", root_path %>
		</p>

		<p>
			<%= link_to "Sign out", signout_path %>
		</p>
	</div>
<% end %>
