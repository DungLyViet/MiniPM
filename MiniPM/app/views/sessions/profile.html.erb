<% if current_user == nil %>
<%= render 'common/error_page' %>
<% else %>
	<% provide(:title, "Profile") %>

	<div>
		<p>
			<h1>Profile</h1>
		</p>
	</div>

	<div>
		<p>
			<nav>
				<ul>
					<% flash.each do |key, value| %>
						<li><%= value %></li>
					<% end %>
				</ul>
			</nav>
		</p>
	</div>

	<div>
		<p>
			<ul>
				<li>User name: <%= current_user.name %></li>
				<li>User name: <%= current_user.email %></li>
			</ul>
		</p>
	</div>

	<div>
		<p>
			<%= link_to "Home", root_path %>
		</p>

		<p>
			<%= link_to "Update", {:controller => users_path, :action => "edit", :id => current_user.id}, {:confirm => "Are you sure?", :method => :post} %>
		</p>

		<p>
			<%= link_to "New project", createproject_path %>
		</p>

		<p>
			<%= link_to "All projects", listprojects_path %>
		</p>

		<p>
			<%= link_to "Sign out", signout_path %>
		</p>
	</div>
<% end %>
