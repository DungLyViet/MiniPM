<% if current_user == nil %>
	<%= render 'common/error_page' %>
<% else %>
	<% provide(:title, "All projects") %>

	<div>
		<p>
			<h1>All projects</h1>
		</p>
	</div>

	<div>
		<p>
			<nav>
				<ul>
					<% flash.each do |key, value| %>
						<li><%= value %></li>
					<% end %>
				</ul>
			</nav>
		</p>
	</div>

	<div>
		<p>
			<%= link_to "Home", root_path %>
			<%= link_to "Profile", profile_path %>
			<%= link_to "Sign out", signout_path %>
		</p>
	</div>

	<div>
		<p>It has <%= current_projects.length %> projects </p>
	</div>

	<div>
		<table>
			<tr>
				<th>
					Id
				</th>
				<th>
					Name
				</th>
				<th>
					Description
				</th>
				<th>
					Update
				</th>
				<th>
					Delete
				</th>
				<th>
					Add task
				</th>
			</tr>
			<% current_projects.each { |p| %>
				<tr>
					<td>
						<%= p.id %>
					</td>
					<td>
						<%= p.name %>
					</td>
					<td>
						<%= p.description %>
					</td>
					<td>
						<%= link_to "update", {:controller => projects_path, :action => "edit", :id => p.id}, {:confirm => "Are you sure?", :method => :post} %>
					</td>
					<td>
						<%= link_to "delete", {:controller => projects_path, :action => "destroy", :id => p.id}, {:confirm => "Are you sure?", :method => :delete, :remote => true} %>
					</td>
					<td>
						<%= link_to "add task", "#" %>
					</td>
				</tr>
			<% } %>
		</table>
	</div>
<% end %>
